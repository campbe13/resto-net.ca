.band
  .container
    /@todo add clear, descriptive text, integrate violation reporting from template
    = form_tag establishments_path, method: :get, id: 'search', class: 'form-inline' do
      %p
        = label_tag :q, t('search.label')
        = text_field_tag :q, params[:q], placeholder: t('search.placeholder'), class: 'input-xlarge'
        = button_tag class: 'btn btn-primary' do
          %i.icon-search.icon-white
          =t 'search.submit'

.container
  #boxes.row
    - if @boxes[:latest_inspections]
      .span3
        .list-box
          %h2
            =t '.latest_inspections'
          .inner
            - @boxes[:latest_inspections].each do |inspection|
              .item
                %strong
                  = link_to inspection.short_name, establishment_path(inspection.establishment)
                /@todo
            .more
              = link_to establishments_path, class: 'btn large default' do # @todo hook this up
                See more
                %span▶
    - if @boxes[:latest_fines]
      .span4
        .list-box
          %h2
            =t '.latest_fines'
          .inner
            %table
              - @boxes[:latest_fines].each do |inspection|
                %tr
                  %td
                    =l inspection.inspection_date, format: :short
                  %td
                    %strong
                      = link_to inspection.short_name, establishment_path(inspection.establishment)
                  %td.item-value
                    = number_to_currency inspection.amount
            .more
              = link_to establishments_path, class: 'btn large default' do # @todo hook this up
                See more
                %span▶
    - if @boxes[:fines_count]
      .span4#fines_count
        .list-box
          %h2
            =t '.most_fines'
          .inner
            %table
              - @boxes[:fines_count].each do |establishment|
                %tr
                  %td
                    %strong
                      = link_to establishment.short_name, establishment_path(establishment)
                  %td.item-chart
                    .item-fill
                      .item-bar(class="bar#{establishment.fines_count * 10 / @maxima[:fines_count]}")
                        .item-number
                          = establishment.fines_count
            .more
              = link_to establishments_path, class: 'btn large default' do # @todo hook this up
                See more
                %span▶
    - if @boxes[:fines_total]
      .span4#fines_total
        .list-box
          %h2
            =t '.highest_fines'
          .inner
            %table
              - @boxes[:fines_total].each do |establishment|
                %tr
                  %td
                    %strong
                      = link_to establishment.short_name, establishment_path(establishment)
                  %td.item-chart
                    .item-fill
                      .item-bar(class="bar#{establishment.fines_total.to_i * 10 / @maxima[:fines_total]}")
                        .item-number
                          = number_to_human establishment.fines_total, precision: 0
            .more
              = link_to establishments_path, class: 'btn large default' do # @todo hook this up
                See more
                %span▶
