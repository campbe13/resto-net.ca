</head>
<body>
<div id="fb-root"></div>

<div class="container">
  <header>
    <div id="language">
      <%= link_to t(:other_language), locale: t(:other_locale) %>
    </div>
    <h1>
      <%= link_to_unless_current image_tag('logo.gif', alt: 'Resto-Net'), root_path %>
      <small>
        <%= t :app_sub_title %>
      </small>
    </h1>
    <div class="fb-like" data-href="http://resto-net.ca/" data-send="true" data-layout="button_count" data-width="100" data-show-faces="false"></div>
  </header>

  <%= yield %>

  <footer>
    <%= link_to t('menu.api'), api_path %>
    <%= link_to t('menu.about'), about_path %>
    <%= link_to image_tag("open-data-montreal-#{locale}.png"), "http://montrealouvert.net/donnees-ouvertes-questions-frequemment-demandees/?lang=#{locale}" %>
  <footer>
</div>

